<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style>
        body {
            padding: 1em;
        }

        body, .table, .form-label, .form-check-label {
            color: var(--vscode-editor-foreground);
            background-color: var(--vscode-editor-background);
        }

        .form-control, .form-control:read-only, .form-check-input, .form-check-input:read-only {
            color: var(--vscode-input-foreground);
            background-color: var(--vscode-input-background);
            border-color: var(--vscode-input-border);
        }

        .form-control:disabled, .form-check-input:disabled {
            opacity: 0.75;
        }
    </style>
    <% if (mode === 'read' || mode === 'update') { %>
        <title>Webhook: <%= webhook.hookId %></title>
    <% } else { %>
        <title>New webhook</title>
    <% } %>
</head>
<body>
    <form>
        <div class="form-group row">
            <label for="hook-system" class="col-sm-2 form-label">System</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="hook-system" value="<%= webhook.system %>" readonly>
            </div>
            <label for="hook-event" class="col-sm-2 form-label">Event</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="hook-event" value="<%= webhook.event %>" readonly>
            </div>
        </div>
        <% if (mode === 'read' || mode === 'update') { %>
            <div class="form-group row">
                <label for="hook-id" class="col-sm-2 form-label">ID</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="hook-id" value="<%= webhook.hookId %>" readonly>
                </div>
            </div>
        <% } %>
        <div class="form-group row">
            <label for="hook-scope" class="col-sm-2 form-label">Scope</label>
            <div class="col-sm-4">
                <% if (mode === 'read' || mode === 'update') { %>
                    <select id="hook-scope-key" class="form-control" readonly>
                        <% for (const key of scopes) { %>
                            <% if (webhook.scope[key]) { %>
                                <option value="<%= key %>" selected><%= key %></option>
                            <% } else { %>
                                <option value="<%= key %>"><%= key %></option>
                            <% } %>
                        <% } %>
                    </select>
                <% } else { %>
                    <select id="hook-scope-key" class="form-control">
                        <% for (const key of scopes) { %>
                            <% if (webhook.scope[key]) { %>
                                <option value="<%= key %>" selected><%= key %></option>
                            <% } else { %>
                                <option value="<%= key %>"><%= key %></option>
                            <% } %>
                        <% } %>
                    </select>
                <% } %>
            </div>
            <div class="col-sm-6">
                <% if (mode === 'read' || mode === 'update') { %>
                    <input type="text" class="form-control" id="hook-scope" value="<%= Object.values(webhook.scope)[0] %>" readonly>
                <% } else { %>
                    <input type="text" class="form-control" id="hook-scope" value="<%= Object.values(webhook.scope)[0] %>">
                <% } %>
            </div>
        </div>
        <div class="form-group row">
            <label for="hook-status" class="col-sm-2 form-label">Status</label>
            <div class="col-sm-10">
                <% if (mode === 'read') { %>
                    <select id="hook-status" class="form-control" readonly>
                        <% if (webhook.status === 'active') { %>
                            <option value="active" selected>active</option>
                            <option value="inactive">inactive</option>
                        <% } else { %>
                            <option value="active">active</option>
                            <option value="inactive" selected>inactive</option>
                        <% } %>
                    </select>
                <% } else { %>
                    <select id="hook-status" class="form-control">
                        <% if (webhook.status === 'active') { %>
                            <option value="active" selected>active</option>
                            <option value="inactive">inactive</option>
                        <% } else { %>
                            <option value="active">active</option>
                            <option value="inactive" selected>inactive</option>
                        <% } %>
                    </select>
                <% } %>
            </div>
        </div>
        <div class="form-group row">
            <label for="hook-filter" class="col-sm-2 form-label">Filter</label>
            <div class="col-sm-10">
                <% if (mode === 'read') { %>
                    <input type="text" class="form-control" id="hook-filter" value="<%= webhook.filter %>" readonly>
                <% } else { %>
                    <input type="text" class="form-control" id="hook-filter" value="<%= webhook.filter %>">
                <% } %>
            </div>
        </div>
        <div class="form-group row">
            <label for="hook-attribute" class="col-sm-2 form-label">Attributes</label>
            <div class="col-sm-10">
                <% if (mode === 'read') { %>
                    <input type="text" class="form-control" id="hook-attribute" value="<%= JSON.stringify(webhook.hookAttribute) %>" readonly>
                <% } else { %>
                    <input type="text" class="form-control" id="hook-attribute" value="<%= JSON.stringify(webhook.hookAttribute) %>">
                <% } %>
            </div>
        </div>
        <div class="form-group row">
            <label for="hook-callback" class="col-sm-2 form-label">Callback URL</label>
            <div class="col-sm-10">
                <% if (mode === 'read' || mode === 'update') { %>
                    <input type="text" class="form-control" id="hook-callback" value="<%= webhook.callbackUrl %>" readonly>
                <% } else { %>
                    <input type="text" class="form-control" id="hook-callback" value="<%= webhook.callbackUrl %>">
                <% } %>
            </div>
        </div>
        <% if (mode === 'read' || mode === 'update') { %>
            <div class="form-group row">
                <label for="hook-urn" class="col-sm-2 form-label">URN</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="hook-urn" value="<%= webhook.urn %>" readonly>
                </div>
            </div>
            <div class="form-group row">
                <label for="hook-tenant" class="col-sm-2 form-label">Tenant</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="hook-tenant" value="<%= webhook.tenant %>" readonly>
                </div>
            </div>
            <div class="form-group row">
                <label for="hook-createdby" class="col-sm-2 form-label">Created By</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="hook-createdby" value="<%= webhook.createdBy %>" readonly>
                </div>
                <label for="hook-createddate" class="col-sm-2 form-label">Created Date</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="hook-createddate" value="<%= webhook.createdDate %>" readonly>
                </div>
            </div>
        <% } %>
        <div class="form-group row">
            <div class="col">
                <% if (mode === 'create') { %>
                    <button type="button" id="create" class="btn btn-primary">Create</button>
                    <button type="button" id="cancel" class="btn btn-secondary">Cancel</button>
                <% } else if (mode === 'update') { %>
                    <button type="button" id="create" class="btn btn-primary">Update</button>
                    <button type="button" id="cancel" class="btn btn-secondary">Cancel</button>
                <% } %>
            </div>
        </div>
    </form>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <% if (mode !== 'read') { %>
        <script>
            const vscode = acquireVsCodeApi();
            $('#create').click(function() {
                vscode.postMessage({
                    command: '<%= mode %>',
                    webhook: {
                        callbackUrl: $('#hook-callback').val(),
                        status: $('#hook-status').val(),
                        scope: {
                            [$('#hook-scope-key').val()]: $('#hook-scope').val()
                        },
                        filter: $('#hook-filter').val(),
                        hookAttribute: JSON.parse($('#hook-attribute').val()),
                    }
                });
            });
            $('#cancel').click(function() {
                vscode.postMessage({ command: 'cancel' });
            });
        </script>
    <% } %>
</body>
</html>
