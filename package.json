{
	"name": "vscode-forge-tools",
	"displayName": "Autodesk Forge Tools",
	"description": "Visual Studio Code extension for accessing Autodesk Forge services and content.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.35.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:forgeDataManagementView",
		"onView:forgeDesignAutomationView"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Forge",
			"properties": {
				"autodesk.forge.clientId": {
					"type": "string",
					"description": "Client ID",
					"scope": "resource"
				},
				"autodesk.forge.clientSecret": {
					"type": "string",
					"description": "Client Secret",
					"scope": "resource"
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "forgeViewContainer",
					"title": "Forge",
					"icon": "resources/logo.png"
				}
			]
		},
		"views": {
			"forgeViewContainer": [
				{
					"id": "forgeDataManagementView",
					"name": "Data Management"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "yarn run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"forge-nodejs-utils": "^1.5.1"
	}
}
